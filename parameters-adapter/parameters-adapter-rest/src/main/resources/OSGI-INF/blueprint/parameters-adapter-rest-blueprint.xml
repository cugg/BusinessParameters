<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="backend" interface="be.kwakeroni.parameters.backend.api.BusinessParametersBackend"/>
    <reference id="wireFormatContext" interface="be.kwakeroni.parameters.backend.api.query.BackendWireFormatterContext"/>
    <service auto-export="all-classes">
        <bean class="be.kwakeroni.parameters.adapter.rest.RestBackendAdapter">
            <argument type="be.kwakeroni.parameters.backend.api.BusinessParametersBackend" ref="backend"/>
            <argument type="be.kwakeroni.parameters.backend.api.query.BackendWireFormatterContext" ref="wireFormatContext"/>
        </bean>
    </service>

</blueprint>