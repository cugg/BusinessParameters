<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:securityFilter="http://www.isabel.be/schema/security-filters"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       					http://www.isabel.be/schema/security-filters http://www.isabel.be/schema/security-filters.xsd">

    <bean id="backendRegistry" class="be.kwakeroni.parameters.adapter.direct.BackendRegistry" />
    <bean id="wireFormatterRegistry" class="be.kwakeroni.parameters.adapter.direct.WireFormatterRegistry" />
    <bean id="directBusinessParameters" class="be.kwakeroni.parameters.adapter.direct.DirectBusinessParametersConnector">
        <argument ref="wireFormatterRegistry" />
        <argument ref="backendRegistry" />
    </bean>

    <service ref="directBusinessParameters" interface="be.kwakeroni.parameters.client.api.BusinessParameters" />

    <reference-list interface="be.kwakeroni.parameters.client.api.factory.ClientWireFormatterFactory" availability="mandatory">
        <reference-listener ref="wireFormatterRegistry" bind-method="register" unbind-method="unregister" />
    </reference-list>
</blueprint>
