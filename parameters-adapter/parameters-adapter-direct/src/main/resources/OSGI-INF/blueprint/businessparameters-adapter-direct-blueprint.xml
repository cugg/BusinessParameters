<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="clientWireFormatterContext"
          class="be.kwakeroni.parameters.adapter.direct.factory.DefaultClientWireFormatterContext"/>
    <bean id="backendWireFormatterContext"
          class="be.kwakeroni.parameters.adapter.direct.factory.DefaultBackendWireFormatterContext"/>

    <bean id="directBusinessParameters" class="be.kwakeroni.parameters.adapter.direct.DirectBusinessParametersClient">
        <argument ref="backend"/>
        <argument ref="backendWireFormatterContext"/>
        <argument ref="clientWireFormatterContext"/>
    </bean>

    <service ref="directBusinessParameters" interface="be.kwakeroni.parameters.client.api.BusinessParameters"/>

    <reference-list interface="be.kwakeroni.parameters.client.api.factory.ClientWireFormatterFactory"
                    filter="(wireformat=raw)"
                    availability="mandatory">
        <reference-listener ref="clientWireFormatterContext" bind-method="register" unbind-method="unregister"/>
    </reference-list>
    <reference-list interface="be.kwakeroni.parameters.backend.api.factory.BackendWireFormatterFactory"
                    filter="(wireformat=raw)"
                    availability="mandatory">
        <reference-listener ref="backendWireFormatterContext" bind-method="register" unbind-method="unregister"/>
    </reference-list>
    <reference id="backend" interface="be.kwakeroni.parameters.backend.api.BusinessParametersBackend"
               availability="mandatory"/>

</blueprint>
