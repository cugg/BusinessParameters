<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:securityFilter="http://www.isabel.be/schema/security-filters"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       					http://www.isabel.be/schema/security-filters http://www.isabel.be/schema/security-filters.xsd">

    <bean id="clientWireFormatterContext" class="be.kwakeroni.parameters.adapter.direct.factory.DefaultClientWireFormatterContext" />
    <bean id="backendWireFormatterContext" class="be.kwakeroni.parameters.adapter.direct.factory.DefaultBackendWireFormatterContext"/>

    <bean id="backendRegistry" class="be.kwakeroni.parameters.adapter.direct.BackendRegistry">
        <argument ref="backendWireFormatterContext" />
    </bean>

    <bean id="directBusinessParameters" class="be.kwakeroni.parameters.adapter.direct.DirectBusinessParametersClient">
        <argument ref="clientWireFormatterContext" />
        <argument ref="backendRegistry" />
    </bean>

    <service ref="directBusinessParameters" interface="be.kwakeroni.parameters.client.api.BusinessParameters" />

    <reference-list interface="be.kwakeroni.parameters.client.api.factory.ClientWireFormatterFactory" availability="mandatory">
        <reference-listener ref="clientWireFormatterContext" bind-method="register" unbind-method="unregister" />
    </reference-list>
    <reference-list interface="be.kwakeroni.parameters.backend.api.factory.BackendWireFormatterFactory" availability="mandatory">
        <reference-listener ref="backendWireFormatterContext" bind-method="register" unbind-method="unregister"/>
    </reference-list>
    <reference-list interface="be.kwakeroni.parameters.backend.api.BusinessParametersBackend" availability="mandatory">
        <reference-listener ref="backendRegistry" bind-method="register" unbind-method="unregister"/>
    </reference-list>

</blueprint>
