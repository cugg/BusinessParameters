<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="wireFormatterContext"
          class="be.kwakeroni.parameters.adapter.direct.factory.DefaultBackendWireFormatterContext"/>

    <bean id="inMemoryBackend" class="be.kwakeroni.parameters.backend.inmemory.service.InMemoryBackend">
        <argument ref="wireFormatterContext"/>
    </bean>

    <service ref="inMemoryBackend" interface="be.kwakeroni.parameters.backend.api.BusinessParametersBackend"/>

    <reference-list interface="be.kwakeroni.parameters.backend.api.factory.BackendWireFormatterFactory"
                    availability="mandatory">
        <reference-listener ref="wireFormatterContext" bind-method="register" unbind-method="unregister"/>
    </reference-list>

</blueprint>
